#!/bin/zsh
setopt LOCAL_OPTIONS ERR_RETURN PIPEFAIL

local -A opts=()
local o_check=()
zparseopts -D -K -A opts 'n:' 'c+:=o_check' 'x:'
o_check=${o_check:1}q
print -l -r -- ${(kv)opts} $o_check
return 1

