#!/bin/zsh
local val="$1"
local default="$2"
[[ -n "$val" ]] || val="$default"

case "${val:l}" in
    false|f|0|n|no|nope)
        return 1
        ;;
    *)
        # Empty string is a no.
        [[ -n "$val" ]] || return 1
        # Anything remaining is truth.
        return 0
        ;;
esac
