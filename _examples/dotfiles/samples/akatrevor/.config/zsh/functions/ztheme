#!/bin/zsh

ztheme() {
    [ $# -gt 0 ] || set -- $ZSH_THEME $USER default

    local zdotdirs=($LOCAL_ZDOTDIR $ZDOTDIRS)

    local names=("$@")
    [[ -z $SSH_CONNECTION ]] || names+=(${^names}-ssh $names ssh)
    [[ -z $TMUX ]] || names=(${^names}-tmux $names tmux)

    for fn in ${^zdotdirs}/themes/${^names}{,.zsh,.sh}(-.N); do
        source $fn
        return
    done

    return 1
}

ztheme "$@"
